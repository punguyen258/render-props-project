{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "prettier", "airbnb"],
  "plugins": ["react", "prettier", "airbnb"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": [
      "error",
        {
          "printWidth": 80,
          "trailingComma": "es5",
          "singleQuote": true,
          "tabWidth": 2,
          "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
        }
      ],
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }]
  }
}
